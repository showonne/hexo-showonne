<% if(type === 'index'){ %>
    <article>
        <h4 class="title"><a href="<%- url_for(post.path) %>"><%= post.title %></a></h4>
        <h6 class="date"><%= post.date.format('YYYY-MM-DD') %></h6>
        <%- list_tags(post.tags, {
            show_count: false,
            class: 'article-tag'
        }) %>
        <section class="md content">
            <% console.log(post.excerpt)%>
            <% if(!/^\s*$/.test(post.excerpt)){ %>
                <%- post.excerpt %>
            <% }else{ %>
                <%- post.content %>
            <% } %>
        </section>
        <% if(!/^\s*$/.test(post.excerpt)){ %>
            <a href="<%- url_for(post.path) %>" class="more">More +</a>
        <% } %>
    </article>
<% }else if (post.title !== 'tags'){ %>
    <h1><%= post.title %></h1>
    <article class="md">
        <%- post.content %>
    </article>
<% }else if(post.title === 'tags'){ %>
    <%- list_tags() %>
<% } %>